<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="e.fikri6998.fikrialfitrarahadi_1202150086_modul6.LoginActivity">

    <ImageView
        android:id="@+id/notebookimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/notebook" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fikri_notebook"
        android:text="Fikri's Notebook"
        android:layout_below="@id/notebookimg"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emaildaftar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fikri_notebook"
        android:layout_centerHorizontal="true" >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/emaildaftar1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fikri_notebook"
            android:hint="Email" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/passworddaftar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emaildaftar"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passworddaftar1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emaildaftar1"

            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/passworddaftar"
        android:layout_alignRight="@id/passworddaftar"
        android:layout_below="@id/passworddaftar"
        android:text="Masuk" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passworddaftar"
        android:layout_alignStart="@+id/passworddaftar"
        android:layout_below="@+id/passworddaftar"
        android:layout_marginTop="10dp"
        android:text="Daftar"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="256dp" />

    <ProgressBar
        android:id="@+id/progress_update"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center"
        android:visibility="gone" />

</RelativeLayout>
